<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/rlHomeCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <RelativeLayout
                android:id="@+id/llIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/cat_home_icon_bg"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivHomeCat"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/app_name"
                    android:padding="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_cat_placeholder"
                    app:shapeAppearanceOverlay="@style/CircleImageViewHomeCat" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvHomeCatTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@+id/llIV"
                android:includeFontPadding="false"
                android:text="@string/app_name"
                android:textStyle="normal"
                android:textColor="@color/title"
                android:textSize="12sp" />
        </RelativeLayout>

</LinearLayout>